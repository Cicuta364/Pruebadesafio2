<%= form_for(@task_project) do |f| %>


  <div class="field">
    <%= f.label 'Usuario a cargo' %><br>
    <%= f.collection_select :user_id, User.all, :id, :email %>
  </div>

  <div class="field">
    <%= f.label 'Proyecto' %><br>
    <%= f.collection_select :project_id, Project.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :pending_task %><br>
    <%= f.number_field :pending_task %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
